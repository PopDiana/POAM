@model POAM.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h4 style="margin-top:150px">Are you sure you want to delete this employee?</h4>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt class="text-primary">
                    Full name:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="text-primary">
                    Address:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="text-primary">
                    Telephone:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Telephone)
                </dd>
                <dt class="text-primary">
                    Employment:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Employment)
                </dd>
                <dt class="text-primary">
                    PID:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Pid)
                </dd>
                <dt class="text-primary">
                    Salary:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Salary)
                </dd>

            </dl>
            <hr />
            <div style="float:right">
                <form asp-action="DeleteEmployee">
                    <input type="hidden" asp-for="IdEmployee" />
                    <input type="submit" value="Yes" class="btn btn-danger" />
                    <input asp-action="EmployeesList" type="submit" value="Cancel" class="btn btn-default" />
                </form>
            </div>
        </div>
    </div>
</div>

