@model POAM.Models.Owner

@{
    ViewData["Title"] = "Delete Owner";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h4 style="margin-top:150px">Are you sure you want to delete this owner?</h4>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt class="text-primary">
                    Full name:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="text-primary">
                    Username:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Username)
                </dd>
                <dt class="text-primary">
                    Telephone:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Telephone)
                </dd>
                <dt class="text-primary">
                    Email:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
            <hr />
            <div style="float:right">
                <form asp-action="DeleteOwner">
                    <input type="hidden" asp-for="IdOwner" />
                    <input type="submit" value="Yes" class="btn btn-danger" />
                    <input asp-action="OwnersList" type="submit" value="Cancel" class="btn btn-default" />
                </form>
            </div>



        </div>
    </div>
</div>

