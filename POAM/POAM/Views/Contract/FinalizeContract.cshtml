@model POAM.Models.Contract

@{
    ViewData["Title"] = "Finalize Contract";
}

<div class="col-md-4">
</div>
<div class="col-md-4">
    
    <h4 style="margin-top:150px">Are you sure you want to finalize this contract?</h4>
    <hr />
        <dl class="dl-horizontal">
            <dt>
                Date:
            </dt>
            <dd>
                @{string date = Model.Date.ToString();
                    @(date.Substring(0, date.Length - 8))
                }
            </dd>
            <dt>
               Provider:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Provider)
            </dd>
            <dt>
                Price:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                Type:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>
        </dl>
        <hr />
        <div style="float:right">
        <form asp-action="FinalizeContract">
            <input type="hidden" asp-for="IdContract" />
            <input type="submit" value="Finalize" class="btn btn-danger" /> 
            <input asp-action="ContractsList" type="submit" value="Cancel" class="btn btn-default" />
        </form>
         </div>
    </div>
